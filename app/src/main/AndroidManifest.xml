<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/dermaexpress"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dermaexpress"
        android:supportsRtl="true"
        android:theme="@style/Theme.Entregas2"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InicioActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ConfigActivity" android:screenOrientation="portrait" />
        <activity android:name=".adapters.MetodoPagoActivity" android:screenOrientation="portrait" />
    </application>

</manifest>